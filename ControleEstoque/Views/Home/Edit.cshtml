@model Business.Produto

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Produto</h1>

<h4>Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form action="/editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" id="nome" name="nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" id="quantidade" name="quantidade"/>
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="nomesFunc">Escolha uma função:</label>
                <select class="form-control" id="nomeFunc" name="funcao">

                    <option value="Novo">Novo Valor</option>
                    <option value="Acrescentado">Acrescentar</option>
                    <option value="Retirado">Retirar</option>


                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Editar</button>
                <button type="reset" class="btn btn-primary">Resetar</button>
            </div>
        </form>


    </div>
</div>

<div>
    <a asp-action="Listar">Voltar para a lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

